<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="brand" href="#">Comente Sobre : $!{comment.title}</a>
		</div>
	</div>
</div>

<form class="form-horizontal" method="post" action="salvar/$!{comment.TitleUrl}">
	<input type="hidden" name="title" value="$!{comment.title}">
	<div class="control-group">
		<label class="control-label" for="inputEmail">Email</label>
		<div class="controls">
			<input type="text" id="inputEmail" placeholder="Email" name="email">
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="inputEmail">Comentario</label>
		<div class="controls">
			<textarea rows="5" name="comment"></textarea>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			<button type="submit" class="btn">Salvar Comentario</button>
		</div>
	</div>
	
</form>